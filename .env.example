# Environment variables for Hinn Nuxt project
# Copy to .env and fill in your values

# Supabase (https://supabase.com)
# Client-side (exposed to browser)
NUXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NUXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side only (do NOT expose to client)
NUXT_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Optional: AI Integration
# DeepSeek API (https://platform.deepseek.com)
# Used for AI-powered site intelligence and reasoning
DEEPSEEK_API_KEY=sk-739f40cb4da84e788d966f776b11ac0d
DEEPSEEK_MODEL=deepseek-chat

# Tavily Web Search (https://tavily.com)
# Used for web search and site content extraction
TAVILY_API_KEY=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

# Search provider: deepseek | tavily
# Set to 'deepseek' to use DeepSeek's native Search/Browse (requires plan support)
# Set to 'tavily' to use Tavily web search
SEARCH_PROVIDER=tavily

# Vercel API (for deployments)
VERCEL_API_TOKEN=your_vercel_api_token
VERCEL_TEAM_ID=your_vercel_team_id
VERCEL_PROJECT_ID=your_vercel_project_id

# OpenAI (Codex)
OPENAI_API_KEY=your_openai_api_key

# GitHub Integration (for website builder)
# Personal Access Token with repo permissions
GITHUB_TOKEN=your_github_personal_access_token
